<div class="text__edit--wrapper">
    <div class="title"><h5>Edit Text</h5></div>
    <form>
        <div class="form-group">
            <label for="text_content">内容</label>
            <input type="text" class="form-control" id="text_content"  placeholder="テッキッストを入力">
        </div>
        <div class="form-group">
            <label for="font_select">Fontを選ぶ</label>
            <select class="form-control" id="font_select">
                <option>Aria</option>
                <option>Time New Roman</option>
                <option>Roboto</option>
                <option>Herical</option>
            </select>
        </div>
        <div class="form-group">
            <label for="size_select">サイズを選ぶ</label>
            <input type="range" class="custom-range" min="0" max="5" id="size_select">
        </div>
    </form>
</div>